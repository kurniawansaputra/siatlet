<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerAddUpdateCriteriaWeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelCriteria"
            style="@style/TextView.PoppinsRegular14spBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Kriteria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spCriteria"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/labelCriteria"
            app:layout_constraintStart_toStartOf="@+id/labelCriteria"
            app:layout_constraintTop_toBottomOf="@+id/labelCriteria"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/ivDropdown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/spCriteria"
            app:layout_constraintEnd_toEndOf="@+id/spCriteria"
            app:layout_constraintTop_toTopOf="@+id/spCriteria" />

        <TextView
            android:id="@+id/labelCriteriaValue"
            style="@style/TextView.PoppinsRegular14spBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Nilai Kriteria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spCriteria" />

        <Spinner
            android:id="@+id/spCriteriaValue"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            app:layout_constraintEnd_toEndOf="@+id/labelCriteriaValue"
            app:layout_constraintStart_toStartOf="@+id/labelCriteriaValue"
            app:layout_constraintTop_toBottomOf="@+id/labelCriteriaValue"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/ivDropdown2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/spCriteriaValue"
            app:layout_constraintEnd_toEndOf="@+id/spCriteriaValue"
            app:layout_constraintTop_toTopOf="@+id/spCriteriaValue" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAddUpdate"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/add"
            app:layout_constraintEnd_toEndOf="@+id/spCriteriaValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/spCriteriaValue"
            app:layout_constraintTop_toBottomOf="@+id/spCriteriaValue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>