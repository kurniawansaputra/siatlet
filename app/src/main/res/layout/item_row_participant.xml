<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardParticipant"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textName"
        style="@style/TextView.PoppinsMedium14spBlack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/ivGender"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bambang Prayoga" />


    <TextView
        android:id="@+id/textNumberReg"
        style="@style/TextView.PoppinsRegular14sp8D92A3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        tools:text="pa1" />

    <ImageView
        android:id="@+id/ivGender"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_male"
        app:layout_constraintBottom_toBottomOf="@+id/textNumberReg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textName"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@string/content_desc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="16dp"
        android:background="@color/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumberReg" />

</androidx.constraintlayout.widget.ConstraintLayout>